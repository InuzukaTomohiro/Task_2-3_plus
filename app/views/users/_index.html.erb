<table class='table'>
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th colspan="4"></th>
    </tr>
  </thead>
  <tbody>
    <% users.each do |users| %>
      <tr>
        <td><%= image_tag users.get_profile_image(50, 50) %></td>
        <td><%= users.name %></td>
        <td>フォロー数:<%= users.followings.count %></td>
        <td>フォロワー数：<%= users.followers.count %></td>
        <td>
          <% if current_user != users %>
            <% if current_user.following?(users) %>
              <%= link_to "フォロー外す", user_relationships_path(users), method: :delete %>
            <% else %>
              <%= link_to "フォローする", user_relationships_path(users), method: :post %>
            <% end %>
          <% end %>
        </td>
        <td><%= link_to 'Show', users %></td>
      </tr>
    <% end %>
  </tbody>
</table>
