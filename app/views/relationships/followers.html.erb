<h1>Follow User</h1>
<% if @users.exists? %>
  <table class="table">
    <thead>
      <tr>
        <th>image</th>
        <th>name</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |users| %>
      <tr>
        <td><%= image_tag users.get_profile_image(80, 80) %></td>
        <td><%= users.name %></td>
        <td>フォロー数:<%= users.followings.count %></td>
        <td>フォロワー数:<%= users.followers.count %></td>
        <td><%= link_to "Show", user_path(users) %></td>
      <% end %>
      </tr>
    </tbody>
  </table>
<% else %>
  <p>ユーザーはいません。</p>
<% end %>
