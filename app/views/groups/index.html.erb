<div class='container px-5 px-sm-0'>
  <%= render 'layouts/errors', book: @book %>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info', user: current_user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'form', book: @book %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <h2>Groups</h2>
      <table>
        <thead>
          <tr>
            <th></th>
            <th>グループ名</th>
            <th>紹介文</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @groups.each do |groups| %>
          <tr>
            <td><%= image_tag groups.get_group_image(50,50) %></td>
            <td><%= groups.name %></td>
            <td><%= groups.introduce %></td>
            <td><%= link_to "Edit", edit_group_path(groups) %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

