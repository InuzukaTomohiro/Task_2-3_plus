<%= form_with model: group do |f| %>
  <div class="mb-3">
    <%= f.label :name,"グループ名" %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= f.label :introduce,"紹介文" %>
    <%= f.text_area :introduce, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= f.label :group_image,"グループ画像" %><br>
    <%= f.file_field :group_image, class: "form-control-file", accept: 'image/*' %>
  </div>

  <div class="form-group">
    <%= f.submit class: 'btn btn-info' %>
  </div>
<% end %>